<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="CToonPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernateJpaProvider</provider>
        
        <!-- Entities -->
        <class>com.ctoon.entities.User</class>
        <class>com.ctoon.entities.Comic</class>
        <class>com.ctoon.entities.Chapter</class>
        <class>com.ctoon.entities.Page</class>
        <class>com.ctoon.entities.Genre</class>
        <class>com.ctoon.entities.Comment</class>
        <class>com.ctoon.entities.Rating</class>
        <class>com.ctoon.entities.Bookmark</class>
        <class>com.ctoon.entities.Cover</class>
        <class>com.ctoon.entities.Profile</class>

        <properties>
            <!-- Database Configuration -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ctoon?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate Configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            
            <!-- Connection Pool -->
            <property name="hibernate.hikari.maximumPoolSize" value="20"/>
            <property name="hibernate.hikari.minimumIdle" value="5"/>
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
        </properties>
    </persistence-unit>

</persistence>
